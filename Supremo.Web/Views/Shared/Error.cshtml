@model ErrorViewModel
@{
    ViewData["Title"] = "Erro";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h3 class="mb-0">
                        <i class="fas fa-exclamation-triangle"></i> Erro
                    </h3>
                </div>
                <div class="card-body">
                    <h4>@Model.Message</h4>
                    <hr />
                    @if (Model.ShowRequestId)
                    {
                        <p class="text-muted">
                            <small>ID da Requisição: @Model.RequestId</small>
                        </p>
                    }
                    <p class="text-muted">
                        Por favor, tente novamente. Se o problema persistir, entre em contato com o suporte.
                    </p>
                    <div class="mt-4">
                        <a asp-controller="Appointments" asp-action="Index" class="btn btn-success">
                            <i class="fas fa-home"></i> Voltar para Página Inicial
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
